    <script>














        $(document).ready(function () {

            $("#bi-shield-lock").mouseenter(function () {
                $("#bi-shield-lock").removeClass("bi-shield-lock").addClass("bi-lock")
            })

            $("#bi-shield-lock").mouseleave(function () {
                $("#bi-shield-lock").removeClass("bi-lock").addClass("bi-shield-lock")
            })




            $('#myform').submit(function (e) {
                e.preventDefault(); // Prevent form submission

                // Clear previous error messages


                // Perform form validation
                var valid = true;

                // Validate Name
                var email = $('#exampleInputEmail1').val();
                console.log(email);
                if (email === '') {
                    console.log("xsda");

                    $("#emailerror").css("display", "inline");
                    valid = false;
                }

                var password = $('#exampleInputPassword1').val();
                if (password === '') {


                    $("#passworderror").css("display", "inline");
                    valid = false;
                }

                var email = $('#exampleInputEmail1').val();
                var emailRegex = /^[A-Z0-9._%+-]+@@[A-Za-z0-9.-]+\.[A-Z]{2,}$/i;

                if (emailRegex.test(email)) {
                    // Valid email address
                    $('#errorMessage').text('');
                    // Perform further actions here, such as form submission
                }

                else if (email === '') {
                    $("#emailerrorr").css("display", "none")
                }

                else {
                    // Invalid email address
                    $("#emailerror").css("display", "none");
                    $("#emailerrorr").css("display", "inline");
                    valid = false;
                }

                // Validate Email
                //var email = $('#email').val();
                //if (email === '') {
                //    $('#emailError').text('Email is required');
                //    valid = false;
                //}

                // If form is valid, submit it
                if (valid) {
                    this.submit();
                }
            });



        })

